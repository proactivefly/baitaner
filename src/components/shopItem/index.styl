.mt-4
  &:first-child
    margin-top:0px
.shopItem
  display:flex
  flex-direction: row
  align-items: stretch
  background:#fff
  padding:20px
  .img
    width:300px;
    height:245px;
    border:1px solid #ddd
    background-size: cover
    margin-right:20px
    overflow: hidden
  .info
    padding:10px
    flex:1
    width: 0
    .title
      font-size:36px
    .indrduce
      color:#595959
      font-size:30px
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
      text-overflow: ellipsis
      margin:5px 0px
    .address
      .location
        font-size:28px
        color:#595959
